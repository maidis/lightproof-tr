# word-level rules (case-sensitive)

[word]

# basic syntax of the rules:
#
# pattern -> suggestion # warning message
# pattern <- condition -> suggestion # warning message
#


# duplicates

ve ve -> ve # Şunu mu demek istediniz:
ya da ya da -> ya da # Şunu mu demek istediniz:
veya veya -> veya # Şunu mu demek istediniz:
için için -> için # Şunu mu demek istediniz:

yayın ve neşriyat -> yayın # Şunu mu demek istediniz:

teşekkür ve (şükran[a-z]+) -> teşekkür + generate(u"teşekkür", \1)[0] # Böyle mi ki?

(\w+) <- "deneme" in stem(\1) -> dene # One of the stem of the word is "dene"

# word-level rules (case-insensitive)

[Word]

# garniturk'ten sevgilerle
# teşekkür ettim için cümle geçmiş zamanda mı kontrolü lazım
teşekkür ediyorum -> teşekkür ederim\nteşekkürler # Teşekkür etmek geniş zamanlıdır. Çok nadir durumlar hariç doğru kullanımı:

# geçtiğimiz -> geçen
geçtiğimiz (hafta|ay|gün|yıl|sene) -> geçen \1 # Zaman geçer, biz zamandan geçmeyiz:

# Wrong structured words | Yapıları yanlış olan sözcükler
(yemek|yemekler) yiyilip -> \1 yenilip # Yemek eyleminin edilgeni yenilmek'tir
bölgevi -> bölgesel # Şunu mu demek istediniz:
tezahüratlar(|ım|ın|ı|ımız|ınız|ımı|ını|ımızı|ınızı) -> tezahürat\1 # Tezahürat zaten çoğuldur
sayfiyelik -> yazlık # Sayfiye yazlık anlamındadır. Üzerine bir de Türkçe +lık eki getirilmemelidir
kardeşane -> kardeşçe # Kardeş Türkçe, ane eki Farsçadır

[word]
# Soyisimleriyle karışmaması için
kutlu(larım|lar|lanan) -> kut\1 # Şunu mu demek istediniz:

[Word]

